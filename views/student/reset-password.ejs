<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Reset Password</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body class="bg-gray-100 font-sans min-h-screen flex flex-col">
    <div id="header"></div>

    <main class="flex-grow flex justify-center items-center p-4">
      <div
        class="bg-white rounded-2xl shadow-xl w-full max-w-md overflow-hidden border-t-4 border-red-500"
      >
        <div class="p-8">
          <h2 class="text-2xl font-bold text-gray-800 mb-2">Reset Password</h2>
          <p class="text-gray-500 text-sm mb-6">
            Verify your identity to set a new password.
          </p>

          <% if (message) { %>
          <div
            class="bg-red-50 border-l-4 border-red-500 text-red-700 p-3 rounded mb-4 text-sm flex justify-between items-center"
          >
            <span
              ><i class="fa-solid fa-circle-exclamation mr-2"></i><%= message
              %></span
            >
            <button
              onclick="this.parentElement.remove()"
              class="text-red-400 hover:text-red-600"
            >
              <i class="fa-solid fa-xmark"></i>
            </button>
          </div>
          <% } %>

          <form
            action="/student/reset-password"
            method="POST"
            autocomplete="off"
            class="space-y-4"
          >
            <div>
              <label
                class="block text-xs font-bold text-gray-600 uppercase mb-1"
                >Roll Number</label
              >
              <input
                type="text"
                name="rollno"
                required
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 outline-none"
              />
            </div>

            <div>
              <label
                class="block text-xs font-bold text-gray-600 uppercase mb-1"
                >Student Name</label
              >
              <input
                type="text"
                name="student_name"
                required
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 outline-none"
              />
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <label
                  class="block text-xs font-bold text-gray-600 uppercase mb-1"
                  >DOB (DD-MM-YYYY)</label
                >
                <input
                  type="text"
                  name="dob"
                  required
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 outline-none"
                  placeholder="DD-MM-YYYY"
                />
              </div>
              <div>
                <label
                  class="block text-xs font-bold text-gray-600 uppercase mb-1"
                  >Phone No</label
                >
                <input
                  type="tel"
                  name="phone_no"
                  maxlength="10"
                  required
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 outline-none"
                />
              </div>
            </div>

            <div>
              <label
                class="block text-xs font-bold text-gray-600 uppercase mb-1"
                >Email ID</label
              >
              <input
                type="email"
                name="email"
                required
                class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 outline-none"
              />
            </div>

            <div>
              <label
                class="block text-xs font-bold text-gray-600 uppercase mb-1"
                >New Password</label
              >
              <div class="relative">
                <input
                  type="password"
                  name="password"
                  id="password"
                  required
                  class="w-full border border-gray-300 rounded-lg px-4 py-2 pr-10 focus:ring-2 focus:ring-red-500 outline-none"
                />
                <i
                  id="togglePassword"
                  class="fa-solid fa-eye absolute top-3 right-3 text-gray-400 cursor-pointer hover:text-gray-600"
                  onclick="togglePassword()"
                ></i>
              </div>
            </div>

            <button
              type="submit"
              class="w-full bg-red-600 text-white font-bold py-3 rounded-lg hover:bg-red-700 transition mt-4 shadow-lg"
            >
              Reset Password
            </button>
          </form>

          <div class="mt-6 text-center">
            <a
              href="/student/login"
              class="text-sm text-blue-600 hover:underline font-medium"
            >
              <i class="fa-solid fa-arrow-left mr-1"></i> Return to Login
            </a>
          </div>
        </div>
      </div>
    </main>

    <script>
      function togglePassword() {
        const pwd = document.getElementById('password');
        const icon = document.getElementById('togglePassword');
        if (pwd.type === 'password') {
          pwd.type = 'text';
          icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
          pwd.type = 'password';
          icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
      }
    </script>
  </body>
</html>
