<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Password Reset</title>
    <link href="/public/css/tailwind.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>

    <script src="/public/js/loadHeaderFooter.js" defer></script>
  </head>
  <body class="bg-gray-100 font-sans">
    <div id="header"></div>

    <div class="flex justify-center items-center mt-2">
      <form
        action="/student/reset-password"
        method="POST"
        class="bg-white p-5 rounded-lg shadow-md w-full max-w-md"
      >
        <h2 class="text-2xl font-semibold text-gray-800 mb-3">
          Reset Password
        </h2>

        <% if (message) { %>
        <div
          class="fixed top-10 right-4 bg-red-100 text-red-700 px-4 py-3 rounded shadow-lg flex items-center space-x-3"
          id="popup-alert"
        >
          <i class="fa-regular fa-circle-xmark"></i>
          <span><%= message %></span>
          <button
            class="ml-4 text-red-700 font-bold hover:underline"
            onclick="document.getElementById('popup-alert').remove()"
          >
            Close
          </button>
        </div>
        <% } %>

        <div class="mb-0.25">
          <label for="rollno" class="block font-medium text-gray-700 mb-1"
            >Roll Number:</label
          >
          <input
            type="text"
            id="rollno"
            name="rollno"
            required
            class="w-full px-2 py-1 border border-gray-400 rounded focus:outline-none focus:ring focus:ring-blue-500 mb-2"
          />
        </div>

        <div class="mb-0.25">
          <label for="student_name" class="block font-medium text-gray-700 mb-1"
            >Student Name:</label
          >
          <input
            type="text"
            id="student_name"
            name="student_name"
            required
            class="w-full px-2 py-1 border border-gray-400 rounded focus:outline-none focus:ring focus:ring-blue-500 mb-2"
          />
        </div>

        <div class="mb-0.25">
          <label for="dob" class="block font-medium text-gray-700 mb-1"
            >Date of Birth (DD-MM-YYYY):</label
          >
          <input
            type="text"
            id="dob"
            name="dob"
            required
            class="w-full px-2 py-1 border border-gray-400 rounded focus:outline-none focus:ring focus:ring-blue-500 mb-2"
          />
        </div>

        <div class="mb-0.25">
          <label for="phone_no" class="block font-medium text-gray-700 mb-1"
            >Phone No:</label
          >
          <input
            type="tel"
            id="phone_no"
            name="phone_no"
            minlength="10"
            maxlength="10"
            required
            class="w-full px-2 py-1 border border-gray-400 rounded focus:outline-none focus:ring focus:ring-blue-500 mb-2"
          />
        </div>

        <div class="mb-0.25">
          <label for="email" class="block font-medium text-gray-700 mb-1"
            >Email Id:</label
          >
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-2 py-1 border border-gray-400 rounded focus:outline-none focus:ring focus:ring-blue-500 mb-2"
          />
        </div>

        <div class="mb-0.25">
          <label for="password" class="block font-medium text-gray-700 mb-1"
            >Password:</label
          >
          <div class="relative">
            <input
              type="password"
              id="password"
              name="password"
              class="w-full px-2 py-1 border border-gray-400 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-500"
              required
            />
            <span
              class="absolute inset-y-0 right-3 flex items-center text-gray-400 cursor-pointer material-symbols-outlined"
              id="visibility"
            >
              <i class="fa-regular fa-eye"></i>
            </span>
            <span
              class="absolute inset-y-0 right-3 flex items-center text-gray-400 cursor-pointer material-symbols-outlined hidden"
              id="visibility_off"
            >
              <i class="fa-regular fa-eye-slash"></i>
            </span>
          </div>
        </div>

        <div class="mb-0.25 mt-5">
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 flex justify-center items-center font-medium focus:ring focus:ring-blue-500"
          >
            <i class="fa-solid fa-arrow-right-to-bracket mr-2"></i>Reset
            Password
          </button>
        </div>

        <div class="text-center mt-2">
          <button
            onclick="window.history.back()"
            class="text-blue-600 hover:underline text font-medium"
          >
            Return to Login
          </button>
        </div>
      </form>
    </div>

    <script async defer>
      // Toggle Password Visibility
      document.addEventListener('DOMContentLoaded', () => {
        const toggleVisibility = (iconShow, iconHide, passwordInput) => {
          iconShow.addEventListener('click', () => {
            passwordInput.type = 'text';
            iconShow.classList.add('hidden');
            iconHide.classList.remove('hidden');
          });

          iconHide.addEventListener('click', () => {
            passwordInput.type = 'password';
            iconHide.classList.add('hidden');
            iconShow.classList.remove('hidden');
          });
        };

        const passwordField = document.getElementById('password');
        const visibility = document.getElementById('visibility');
        const visibilityOff = document.getElementById('visibility_off');

        toggleVisibility(visibility, visibilityOff, passwordField);
      });
    </script>
  </body>
</html>
