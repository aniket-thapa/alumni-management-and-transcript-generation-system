<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Student Marks</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body class="bg-gray-50 font-sans min-h-screen flex flex-col">
    <div id="header"></div>

    <div class="container mx-auto px-4 py-8 max-w-6xl">
      <div class="flex justify-between items-center mb-6 no-print">
        <h1 class="text-3xl font-bold text-gray-800">Academic Performance</h1>
        <a
          href="/student/dashboard"
          class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded font-semibold transition"
          ><i class="fa-solid fa-arrow-left"></i> Back</a
        >
      </div>

      <div
        class="bg-white rounded-lg shadow p-6 mb-8 flex justify-between items-center border-l-4 border-blue-600"
      >
        <div>
          <h2 class="text-xl font-bold text-gray-800">
            <%= studentDetails.student_name %>
          </h2>
          <p class="text-gray-600">
            Roll No: <span class="font-mono"><%= studentDetails.rollno %></span>
          </p>
          <p class="text-gray-600">
            Department: <%= studentDetails.department %>
          </p>
        </div>
        <img
          src="/public/uploads/profile_pics/<%= studentDetails.profile_pic %>"
          class="w-20 h-20 rounded-full object-cover border shadow-sm"
        />
      </div>

      <% for (let semester in semesters) { %>
      <div class="bg-white rounded-lg shadow mb-8 overflow-hidden">
        <div
          class="bg-gray-800 text-white px-6 py-3 flex justify-between items-center"
        >
          <h3 class="text-lg font-bold">Semester <%= semester %></h3>
          <span class="text-sm bg-gray-700 px-2 py-1 rounded"
            >Session: <%= semesters[semester].courses[0].session || 'N/A'
            %></span
          >
        </div>

        <div class="overflow-x-auto">
          <table class="w-full text-sm text-left text-gray-600">
            <thead class="text-xs text-gray-700 uppercase bg-gray-100">
              <tr>
                <th class="px-6 py-3">Code</th>
                <th class="px-6 py-3">Subject</th>
                <th class="px-6 py-3 text-center">Type</th>
                <th class="px-6 py-3 text-center">Credits</th>
                <th class="px-6 py-3 text-center">Max Marks</th>
                <th class="px-6 py-3 text-center">Obtained</th>
                <th class="px-6 py-3 text-center">Grade</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% semesters[semester].courses.forEach(course => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 font-medium"><%= course.course_code %></td>
                <td class="px-6 py-4"><%= course.course_name %></td>
                <td class="px-6 py-4 text-center"><%= course.course_type %></td>
                <td class="px-6 py-4 text-center"><%= course.credits %></td>
                <td class="px-6 py-4 text-center"><%= course.max_marks %></td>
                <td class="px-6 py-4 text-center font-bold text-gray-800">
                  <%= course.marks_obtained %>
                </td>
                <td class="px-6 py-4 text-center">
                  <span
                    class="bg-blue-100 text-blue-800 text-xs font-bold px-2.5 py-0.5 rounded"
                    ><%= course.grade %></span
                  >
                </td>
              </tr>
              <% }); %>
            </tbody>
            <tfoot class="bg-gray-50 font-semibold text-gray-900">
              <tr>
                <td colspan="3" class="px-6 py-3 text-right">
                  Semester Total:
                </td>
                <td class="px-6 py-3 text-center">
                  <%= semesters[semester].total_credits %>
                </td>
                <td class="px-6 py-3 text-center">
                  <%= semesters[semester].total_max_marks %>
                </td>
                <td class="px-6 py-3 text-center">
                  <%= semesters[semester].total_marks_obtained %>
                </td>
                <td class="px-6 py-3 text-center bg-green-50 text-green-700">
                  SGPA: <%= semesters[semester].gpa %>
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
      <% } %>

      <div class="text-center mt-8 no-print">
        <button
          onclick="window.location.href='/student/transcript/<%= studentDetails.rollno %>'"
          class="bg-green-600 text-white px-6 py-3 rounded shadow hover:bg-green-700 transition font-bold"
        >
          <i class="fa-solid fa-file-pdf mr-2"></i> Download Official Transcript
        </button>
      </div>
    </div>
  </body>
</html>
