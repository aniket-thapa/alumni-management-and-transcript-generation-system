      function print_state(state_id) {
        var option_str = document.getElementById(state_id);
        option_str.length = 0;
        option_str.options[0] = new Option('Select State', '');
        option_str.selectedIndex = 0;
        for (var i = 0; i < states_arr.length; i++) {
          option_str.options[option_str.length] = new Option(
            states_arr[i],
            states_arr[i]
          );
        }
      }

      function print_district(district_id, district_index) {
        var option_str = document.getElementById(district_id);
        option_str.length = 0;
        option_str.options[0] = new Option('Select District', '');
        option_str.selectedIndex = 0;
        var district_arr_list = district_arr[district_index].split('|');
        for (var i = 0; i < district_arr_list.length; i++) {
          option_str.options[option_str.length] = new Option(
            district_arr_list[i],
            district_arr_list[i]
          );
        }
      }

      function toggleInputs() {
        var nationality = document.getElementById('nationality').value;
        var stateDropdown = document.getElementById('state');
        var districtDropdown = document.getElementById('district');
        var stateText = document.getElementById('stateText');
        var districtText = document.getElementById('districtText');

