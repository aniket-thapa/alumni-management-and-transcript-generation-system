          stateDropdown.style.visibility = 'visible';
          districtDropdown.style.visibility = 'visible';
          stateText.style.visibility = 'hidden';
          districtText.style.visibility = 'hidden';
        } else {
          stateDropdown.style.visibility = 'hidden';
          districtDropdown.style.visibility = 'hidden';
          stateText.style.visibility = 'visible';
          districtText.style.visibility = 'visible';
        }
