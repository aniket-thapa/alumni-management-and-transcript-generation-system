<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Student Login</title>
    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://www.google.com/recaptcha/api.js" async></script>
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body class="bg-gray-100 font-sans min-h-screen flex flex-col">
    <div id="header"></div>

    <% if (successMessage) { %>
    <div
      id="popup-alert"
      class="fixed top-24 right-5 bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded shadow-lg z-50 flex items-center gap-3 animate-bounce-in"
    >
      <i class="fa-solid fa-circle-check text-xl"></i>
      <span><%= successMessage %></span>
      <button
        onclick="document.getElementById('popup-alert').remove()"
        class="ml-auto text-green-800 hover:text-green-900"
      >
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <% } %> <% if (message) { %>
    <div
      id="popup-alert"
      class="fixed top-24 right-5 bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded shadow-lg z-50 flex items-center gap-3 animate-bounce-in"
    >
      <i class="fa-solid fa-circle-exclamation text-xl"></i>
      <span><%= message %></span>
      <button
        onclick="document.getElementById('popup-alert').remove()"
        class="ml-auto text-red-800 hover:text-red-900"
      >
        <i class="fa-solid fa-xmark"></i>
      </button>
    </div>
    <% } %>

    <main class="flex-grow flex justify-center items-center p-4">
      <div
        class="bg-white rounded-2xl shadow-2xl overflow-hidden flex w-full max-w-4xl"
      >
        <div
          class="hidden md:flex w-1/2 bg-gradient-to-br from-blue-800 to-blue-600 p-10 flex-col justify-center text-white"
        >
          <h2 class="text-3xl font-bold mb-4">Student Portal</h2>
          <p class="opacity-90 mb-8">
            Login to access your dashboard, transcripts, and placement cell
            updates.
          </p>
          <ul class="space-y-3 text-sm opacity-80">
            <li>
              <i class="fa-solid fa-check-circle mr-2"></i> View Semester Marks
            </li>
            <li>
              <i class="fa-solid fa-check-circle mr-2"></i> Download Official
              Transcripts
            </li>
            <li>
              <i class="fa-solid fa-check-circle mr-2"></i> Update Job Profiles
            </li>
          </ul>
        </div>

        <div class="w-full md:w-1/2 p-8 md:p-12">
          <h2 class="text-2xl font-bold text-gray-800 text-center mb-8">
            Sign In
          </h2>
          <form
            action="/student/login"
            method="POST"
            id="loginForm"
            onsubmit="validateForm(event)"
            class="space-y-5"
          >
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Roll Number</label
              >
              <div class="relative">
                <span
                  class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
                  ><i class="fa-solid fa-id-card"></i
                ></span>
                <input
                  type="text"
                  id="rollno"
                  name="rollno"
                  class="w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
                  placeholder="Enter Roll No"
                  oninput="clearError('rollno', 'rollnoError')"
                />
              </div>
              <p id="rollnoError" class="text-red-500 text-xs mt-1"></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1"
                >Password</label
              >
              <div class="relative">
                <span
                  class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400"
                  ><i class="fa-solid fa-lock"></i
                ></span>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="w-full pl-10 pr-10 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition"
                  placeholder="••••••••"
                  oninput="clearError('password', 'passwordError')"
                />
                <span
                  class="absolute inset-y-0 right-0 flex items-center pr-3 cursor-pointer text-gray-400 hover:text-gray-600"
                  onclick="togglePassword()"
                >
                  <i id="togglePasswordIcon" class="fa-solid fa-eye"></i>
                </span>
              </div>
              <p id="passwordError" class="text-red-500 text-xs mt-1"></p>
              <div class="text-right mt-1">
                <a
                  href="/student/reset-password"
                  class="text-xs text-blue-600 hover:underline"
                  >Forgot Password?</a
                >
              </div>
            </div>

            <div class="flex justify-center">
              <div
                id="recaptcha"
                class="g-recaptcha"
                data-sitekey="6Ld6vGkrAAAAAMMaX4NtFTIDSFi4g2MUtg83lbud"
                data-callback="onRecaptchaSuccess"
              ></div>
            </div>
            <p id="recaptchaError" class="text-red-500 text-xs text-center"></p>

            <button
              type="submit"
              class="w-full bg-blue-700 text-white font-bold py-3 rounded-lg hover:bg-blue-800 transition shadow-lg"
            >
              Login
            </button>
          </form>

          <div class="mt-6 text-center text-sm text-gray-600">
            Don't have an account?
            <a
              href="/student/registration"
              class="text-blue-700 font-bold hover:underline"
              >Register Here</a
            >
          </div>
        </div>
      </div>
    </main>

    <script>
      function validateForm(event) {
        event.preventDefault();
        let valid = true;
        // ... (Your existing validation logic here) ...
        // Simply trigger form submit if valid
        if (
          document.getElementById('rollno').value &&
          document.getElementById('password').value
        ) {
          document.getElementById('loginForm').submit();
        } else {
          if (!document.getElementById('rollno').value)
            document.getElementById('rollnoError').innerText = 'Required';
          if (!document.getElementById('password').value)
            document.getElementById('passwordError').innerText = 'Required';
        }
      }
      function clearError(id, errId) {
        document.getElementById(errId).innerText = '';
      }
      function onRecaptchaSuccess() {
        document.getElementById('recaptchaError').innerText = '';
      }
      function togglePassword() {
        const pwd = document.getElementById('password');
        const icon = document.getElementById('togglePasswordIcon');
        if (pwd.type === 'password') {
          pwd.type = 'text';
          icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
          pwd.type = 'password';
          icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
      }
    </script>
  </body>
</html>
