<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Placement History</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body class="bg-gray-100 font-sans min-h-screen flex flex-col">
    <div id="header"></div>

    <main class="flex-grow container mx-auto px-4 py-8 max-w-5xl">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800">
          Placement History
        </h1>
        <a
          href="/student/dashboard"
          class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg font-semibold hover:bg-gray-50 transition shadow-sm"
        >
          <i class="fa-solid fa-arrow-left mr-2"></i> Back
        </a>
      </div>

      <% if (message) { %>
      <div
        id="popup-alert"
        class="fixed top-24 right-5 bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 rounded shadow-lg z-50 flex items-center gap-3"
      >
        <i class="fa-solid fa-circle-info"></i> <span><%= message %></span>
        <button
          onclick="this.parentElement.remove()"
          class="ml-auto text-blue-800"
        >
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <% } %> <% if (jobDetails.length === 0) { %>
      <div
        class="bg-white rounded-xl shadow-sm p-12 text-center border border-gray-200"
      >
        <div
          class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl text-gray-400"
        >
          <i class="fa-solid fa-folder-open"></i>
        </div>
        <h3 class="text-xl font-bold text-gray-700 mb-2">No Records Found</h3>
        <p class="text-gray-500 mb-6">
          You haven't added any placement details yet.
        </p>
        <a
          href="/student/job-details"
          class="bg-blue-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition"
          >Add Placement</a
        >
      </div>
      <% } else { %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% jobDetails.forEach((job) => { %>
        <div
          class="bg-white rounded-xl shadow-md hover:shadow-lg transition border border-gray-200 overflow-hidden flex flex-col h-full"
        >
          <div
            class="bg-gray-50 px-6 py-4 border-b border-gray-100 flex justify-between items-center"
          >
            <h3 class="text-lg font-bold text-gray-800 truncate">
              <i class="fa-solid fa-briefcase text-blue-500 mr-2"></i><%=
              job.company_name %>
            </h3>
            <% if (!job.date_of_leaving) { %>
            <span
              class="bg-green-100 text-green-700 text-xs px-2 py-1 rounded font-bold uppercase animate-pulse"
              >Current</span
            >
            <% } else { %> <% } %>
          </div>

          <div class="p-6 flex-grow space-y-3 text-sm text-gray-600">
            <p>
              <i
                class="fa-solid fa-location-dot w-5 text-center mr-1 text-gray-400"
              ></i>
              <%= job.address_of_company %>
            </p>

            <div class="flex items-center gap-2">
              <i
                class="fa-regular fa-calendar w-5 text-center mr-1 text-gray-400"
              ></i>
              <span
                >Joined:
                <span class="font-semibold text-gray-800"
                  ><%= new Date(job.date_of_joining).toLocaleDateString()
                  %></span
                ></span
              >
            </div>

            <div class="flex items-center gap-2">
              <i
                class="fa-solid fa-right-from-bracket w-5 text-center mr-1 text-gray-400"
              ></i>
              <span
                >Left: <% if (job.date_of_leaving) { %>
                <span class="font-semibold text-gray-800"
                  ><%= new Date(job.date_of_leaving).toLocaleDateString()
                  %></span
                >
                <% } else { %>
                <span class="italic text-gray-400">Present</span>
                <% } %>
              </span>
            </div>
          </div>

          <div class="px-6 py-4 bg-gray-50 border-t border-gray-100 space-y-4">
            <a
              href="/public/uploads/offer_letters/<%= job.offer_letter %>"
              target="_blank"
              class="flex items-center justify-center w-full bg-white border border-blue-200 text-blue-600 py-2 rounded hover:bg-blue-50 transition font-semibold text-sm"
            >
              <i class="fa-regular fa-file-pdf mr-2"></i> View Offer Letter
            </a>

            <% if (!job.date_of_leaving) { %>
            <form
              action="/student/update-date-of-leaving"
              method="POST"
              class="pt-2 border-t border-gray-200"
              onsubmit="return confirm('Confirm update date of leaving?')"
            >
              <input type="hidden" name="rollno" value="<%= job.rollno %>" />
              <input
                type="hidden"
                name="company_name"
                value="<%= job.company_name %>"
              />

              <label
                class="block text-xs font-bold text-gray-500 uppercase mb-1"
                >Update Leaving Date</label
              >
              <div class="flex gap-2">
                <input
                  type="date"
                  name="date_of_leaving"
                  required
                  class="flex-grow px-2 py-1 border border-gray-300 rounded text-sm focus:outline-none focus:border-blue-500"
                />
                <button
                  type="submit"
                  class="bg-gray-800 text-white px-3 py-1 rounded text-sm hover:bg-gray-900"
                >
                  Update
                </button>
              </div>
            </form>
            <% } %>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </main>
  </body>
</html>
