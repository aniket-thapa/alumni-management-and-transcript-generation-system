<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Change Password</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body class="bg-gray-100 font-sans min-h-screen flex flex-col">
    <div id="header"></div>

    <main class="flex-grow flex justify-center items-center p-4">
      <div
        class="bg-white rounded-2xl shadow-xl w-full max-w-lg overflow-hidden border-t-4 border-green-600"
      >
        <div class="bg-gray-50 p-6 border-b border-gray-100 text-center">
          <div
            class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl"
          >
            <i class="fa-solid fa-key"></i>
          </div>
          <h2 class="text-2xl font-bold text-gray-800">Change Password</h2>
          <p class="text-gray-500 text-sm mt-1">
            Secure your account with a new password.
          </p>
        </div>

        <form
          id="changePasswordForm"
          method="POST"
          action="/student/change-password"
          class="p-8 space-y-5"
        >
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label
                class="block text-xs font-bold text-gray-500 uppercase mb-1"
                >Roll Number</label
              >
              <input
                type="text"
                name="rollno"
                value="<%= student.rollno %>"
                readonly
                class="w-full bg-gray-100 border border-gray-200 rounded px-3 py-2 text-gray-600 cursor-not-allowed text-sm"
              />
            </div>
            <div>
              <label
                class="block text-xs font-bold text-gray-500 uppercase mb-1"
                >DOB (Current Pass)</label
              >
              <input
                type="text"
                name="dob"
                value="<%= student.dob %>"
                readonly
                class="w-full bg-gray-100 border border-gray-200 rounded px-3 py-2 text-gray-600 cursor-not-allowed text-sm"
              />
            </div>
          </div>

          <div
            class="bg-blue-50 text-blue-800 text-xs p-3 rounded border border-blue-200"
          >
            <i class="fa-solid fa-circle-info mr-1"></i>
            Password must be <strong>8+ chars</strong> with Uppercase,
            Lowercase, Number & Symbol (e.g., <em>Pass@123</em>).
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >New Password <span class="text-red-500">*</span></label
            >
            <div class="relative">
              <input
                type="password"
                id="new_password"
                name="new_password"
                autocomplete="new-password"
                required
                class="w-full pr-10 pl-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 outline-none transition"
              />
              <i
                id="toggle_new_password"
                class="fa-solid fa-eye absolute top-3 right-3 text-gray-400 cursor-pointer hover:text-gray-600"
                onclick="togglePassword('new_password', 'toggle_new_password')"
              ></i>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Confirm Password <span class="text-red-500">*</span></label
            >
            <div class="relative">
              <input
                type="password"
                id="confirm_password"
                name="confirm_password"
                autocomplete="new-password"
                required
                class="w-full pr-10 pl-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 outline-none transition"
              />
              <i
                id="toggle_confirm_Password"
                class="fa-solid fa-eye absolute top-3 right-3 text-gray-400 cursor-pointer hover:text-gray-600"
                onclick="togglePassword('confirm_password', 'toggle_confirm_Password')"
              ></i>
            </div>
            <p
              id="passwordError"
              class="text-red-500 text-xs mt-2 font-medium"
            ></p>
          </div>

          <button
            type="submit"
            class="w-full bg-green-600 text-white font-bold py-3 rounded-lg hover:bg-green-700 transition shadow-md"
          >
            Update Password
          </button>
        </form>
      </div>
    </main>

    <script>
      function togglePassword(inputId, iconId) {
        let input = document.getElementById(inputId);
        let icon = document.getElementById(iconId);
        if (input.type === 'password') {
          input.type = 'text';
          icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
          input.type = 'password';
          icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
      }

      document
        .getElementById('changePasswordForm')
        .addEventListener('submit', function (e) {
          const newPass = document.getElementById('new_password').value;
          const confirmPass = document.getElementById('confirm_password').value;
          const regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;

          if (newPass !== confirmPass) {
            e.preventDefault();
            document.getElementById('passwordError').textContent =
              'Passwords do not match!';
          } else if (!regex.test(newPass)) {
            e.preventDefault();
            document.getElementById('passwordError').textContent =
              'Password does not meet security requirements.';
          }
        });
    </script>
  </body>
</html>
