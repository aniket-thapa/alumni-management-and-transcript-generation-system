<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/header.css" />

    <script src="https://cdn.tailwindcss.com"></script>

    <script
      src="https://kit.fontawesome.com/9ca9aa7819.js"
      crossorigin="anonymous"
    ></script>
    
  </head>
  <body>
    <%- include ("../header.ejs") %>
    <div class="container mx-auto p-4">
      <h1 class="text-center text-3xl font-semibold capitalize mb-6">Admin Dashboard</h1>

      <div class="links flex flex-wrap justify-center gap-8 mt-8 ">
        <a href="/admin/students" class="glass-box p-6 flex flex-col items-center justify-center bg-white bg-opacity-20 backdrop-blur-sm rounded-lg shadow-md text-lg text-center hover:shadow-gray-400">
          <i class="fa-solid fa-user-graduate"></i>View Students
        </a>

        <a href="/admin/view-courses" class="glass-box p-6 flex flex-col items-center justify-center bg-white bg-opacity-20 backdrop-blur-sm rounded-lg shadow-md text-lg text-center hover:shadow-gray-400">
          <i class="fa-solid fa-graduation-cap"></i>View Courses
        </a>

        <a href="/admin/add-courses" class="glass-box p-6 flex flex-col items-center justify-center bg-white bg-opacity-20 backdrop-blur-sm rounded-lg shadow-md text-lg text-center hover:shadow-gray-400">
          <i class="fa-solid fa-square-plus"></i>Add Courses
        </a>
      </div>
    </div>
    <div class="absolute top-4 right-4">
      <div id="logout" class="relative">
        <a href="/admin/logout"
           class="flex items-center bg-red-600 text-white py-2 px-4 rounded-md font-bold text-sm transition-all hover:bg-red-700 hover:border border-red-600">
          <i class="fa-solid fa-arrow-right-from-bracket mr-2"></i> Logout
        </a>
      </div>
    </div>
  </body>
</html>
