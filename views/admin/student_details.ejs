<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Student Profile | Admin</title>
    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body class="bg-slate-50 font-sans min-h-screen flex flex-col">
    <div id="header"></div>

    <main class="flex-grow container mx-auto px-4 py-8 max-w-6xl">
      <div class="flex justify-between items-center mb-6">
        <div class="flex items-center gap-3">
          <a
            href="/admin/students"
            class="bg-white border border-slate-300 px-3 py-2 rounded-lg hover:bg-slate-100 transition"
            ><i class="fa-solid fa-arrow-left"></i
          ></a>
          <h1 class="text-2xl font-bold text-slate-800">Student Profile</h1>
        </div>
        <div class="flex gap-2">
          <a
            href="/admin/students/edit/<%= studentDetails.rollno %>"
            class="bg-amber-500 hover:bg-amber-600 text-white px-4 py-2 rounded-lg shadow font-bold text-sm transition"
            ><i class="fa-solid fa-pen-to-square mr-2"></i> Edit</a
          >
          <button
            id="deleteBtn"
            data-rollno="<%= studentDetails.rollno %>"
            class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg shadow font-bold text-sm transition"
          >
            <i class="fa-solid fa-trash-can mr-2"></i> Delete
          </button>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="space-y-6">
          <div
            class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 text-center"
          >
            <div class="relative w-32 h-32 mx-auto mb-4">
              <img
                src="/public/uploads/profile_pics/<%= studentDetails.profile_pic %>"
                class="w-32 h-32 rounded-full object-cover border-4 border-slate-100 shadow-md"
              />
            </div>
            <h2 class="text-xl font-bold text-slate-800 capitalize">
              <%= studentDetails.student_name %>
            </h2>
            <p class="text-indigo-600 font-mono font-medium mt-1">
              <%= studentDetails.rollno %>
            </p>
            <div class="mt-4 flex flex-wrap justify-center gap-2">
              <span
                class="px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-xs font-bold"
                ><%= studentDetails.department %></span
              >
              <span
                class="px-3 py-1 bg-slate-100 text-slate-600 rounded-full text-xs font-bold"
                ><%= studentDetails.year_of_admission %></span
              >
            </div>
          </div>

          <div
            class="bg-white rounded-xl shadow-sm border border-slate-200 p-6"
          >
            <h3 class="text-sm font-bold text-slate-400 uppercase mb-4">
              Quick Actions
            </h3>
            <div class="space-y-3">
              <a
                href="/admin/student-job-details/<%= studentDetails.rollno %>"
                class="w-full bg-emerald-50 text-emerald-700 hover:bg-emerald-600 hover:text-white py-2 px-4 rounded-lg transition font-medium flex justify-between items-center"
              >
                <span
                  ><i class="fa-solid fa-briefcase mr-2"></i> View Jobs</span
                >
                <i class="fa-solid fa-chevron-right text-xs"></i>
              </a>
              <a
                href="/admin/marks/<%= studentDetails.rollno %>"
                class="w-full bg-blue-50 text-blue-700 hover:bg-blue-600 hover:text-white py-2 px-4 rounded-lg transition font-medium flex justify-between items-center"
              >
                <span
                  ><i class="fa-solid fa-poll mr-2"></i> View Marksheet</span
                >
                <i class="fa-solid fa-chevron-right text-xs"></i>
              </a>
              <button
                onclick="downloadTranscript('<%= studentDetails.rollno %>')"
                class="w-full bg-indigo-50 text-indigo-700 hover:bg-indigo-600 hover:text-white py-2 px-4 rounded-lg transition font-medium flex justify-between items-center text-left"
              >
                <span
                  ><i class="fa-solid fa-file-pdf mr-2"></i> Download
                  Transcript</span
                >
                <i class="fa-solid fa-download text-xs"></i>
              </button>
            </div>
          </div>

          <div
            class="bg-white rounded-xl shadow-sm border border-slate-200 p-6"
          >
            <h3 class="text-sm font-bold text-slate-400 uppercase mb-4">
              Add Marks
            </h3>
            <div class="grid grid-cols-4 gap-2">
              <% for(let i=1; i<=8; i++) { %>
              <a
                href="/admin/add-marks/<%= studentDetails.rollno %>/<%= i %>"
                class="bg-slate-100 hover:bg-slate-800 hover:text-white text-slate-600 py-2 rounded text-center text-xs font-bold transition"
                >Sem <%= i %></a
              >
              <% } %>
            </div>
          </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
          <div
            class="bg-white rounded-xl shadow-sm border border-slate-200 p-6"
          >
            <h3
              class="text-lg font-bold text-slate-800 border-b border-slate-100 pb-3 mb-4"
            >
              Personal Information
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Father's Name</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.father_name %>
                </p>
              </div>
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Date of Birth</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.dob %>
                </p>
              </div>
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Gender</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.gender %>
                </p>
              </div>
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Category</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.category %>
                </p>
              </div>
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Nationality</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.nationality %>
                </p>
              </div>
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Religion</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.religion %>
                </p>
              </div>
            </div>
          </div>

          <div
            class="bg-white rounded-xl shadow-sm border border-slate-200 p-6"
          >
            <h3
              class="text-lg font-bold text-slate-800 border-b border-slate-100 pb-3 mb-4"
            >
              Contact Details
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Phone</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.phone_no %>
                </p>
              </div>
              <div>
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Email</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.email %>
                </p>
              </div>
              <div class="sm:col-span-2">
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Permanent Address</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.permanent_address %>
                </p>
              </div>
              <div class="sm:col-span-2">
                <label class="text-xs text-slate-400 uppercase font-bold"
                  >Correspondence Address</label
                >
                <p class="font-medium text-slate-700">
                  <%= studentDetails.correspondence_address %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      document
        .getElementById('deleteBtn')
        .addEventListener('click', function () {
          const rollno = this.getAttribute('data-rollno');
          if (
            confirm(
              'Are you sure you want to PERMANENTLY delete this student and all related records?'
            )
          ) {
            fetch(`/admin/students/delete/${rollno}`, { method: 'DELETE' })
              .then((res) => res.json())
              .then((data) => {
                alert(data.message || 'Deleted successfully');
                window.location.href = '/admin/students';
              })
              .catch((err) => alert('Error deleting student'));
          }
        });

      function downloadTranscript(rollno) {
        window.location.href = `/student/transcript/${rollno}`;
      }
    </script>
  </body>
</html>
