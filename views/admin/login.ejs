<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Portal Login</title>
    <link rel="stylesheet" href="/public/css/tailwind.css" />
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="/public/css-fontawesome/all.min.css" />
    <script src="/public/js/loadHeaderFooter.js"></script>
  </head>
  <body
    class="bg-slate-900 font-sans min-h-screen flex flex-col justify-center items-center"
  >
    <div class="w-full max-w-md p-8">
      <div class="text-center mb-8">
        <img
          src="/public/images/JU_Logo.webp"
          alt="Logo"
          class="h-20 mx-auto mb-4 drop-shadow-lg grayscale brightness-200"
        />
        <h1 class="text-3xl font-bold text-white tracking-wider uppercase">
          Admin Portal
        </h1>
        <p class="text-slate-400 text-sm mt-1">University of Jammu</p>
      </div>

      <div
        class="bg-slate-800 rounded-2xl shadow-2xl border border-slate-700 overflow-hidden"
      >
        <div class="p-8">
          <% if (message) { %>
          <div
            class="bg-red-500/10 border border-red-500/50 text-red-400 p-3 rounded-lg mb-6 flex items-center text-sm"
          >
            <i class="fa-solid fa-triangle-exclamation mr-2"></i> <%= message %>
          </div>
          <% } %>

          <form action="/admin/login" method="POST" class="space-y-6">
            <div>
              <label
                class="block text-xs font-bold text-slate-400 uppercase mb-2"
                >Username</label
              >
              <div class="relative">
                <span
                  class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500"
                  ><i class="fa-solid fa-user-shield"></i
                ></span>
                <input
                  type="text"
                  name="username"
                  required
                  class="w-full bg-slate-900 border border-slate-600 rounded-lg py-2.5 pl-10 pr-4 text-white placeholder-slate-500 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition"
                  placeholder="Admin ID"
                />
              </div>
            </div>

            <div>
              <label
                class="block text-xs font-bold text-slate-400 uppercase mb-2"
                >Password</label
              >
              <div class="relative">
                <span
                  class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500"
                  ><i class="fa-solid fa-lock"></i
                ></span>
                <input
                  type="password"
                  name="password"
                  id="password"
                  required
                  class="w-full bg-slate-900 border border-slate-600 rounded-lg py-2.5 pl-10 pr-10 text-white placeholder-slate-500 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition"
                  placeholder="••••••••"
                />
                <span
                  class="absolute inset-y-0 right-0 pr-3 flex items-center cursor-pointer text-slate-500 hover:text-indigo-400"
                  onclick="togglePassword()"
                >
                  <i id="toggleIcon" class="fa-solid fa-eye"></i>
                </span>
              </div>
            </div>

            <button
              type="submit"
              class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg shadow-lg shadow-indigo-500/30 transition-all duration-200 transform hover:-translate-y-0.5"
            >
              Secure Login <i class="fa-solid fa-arrow-right ml-2"></i>
            </button>
          </form>
        </div>
        <div
          class="bg-slate-900/50 px-8 py-4 border-t border-slate-700 text-center"
        >
          <a href="/" class="text-slate-500 text-sm hover:text-white transition"
            ><i class="fa-solid fa-house mr-1"></i> Back to Home</a
          >
        </div>
      </div>
    </div>

    <script>
      function togglePassword() {
        const pwd = document.getElementById('password');
        const icon = document.getElementById('toggleIcon');
        if (pwd.type === 'password') {
          pwd.type = 'text';
          icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
          pwd.type = 'password';
          icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
      }
    </script>
  </body>
</html>
